<%= form_with(model: emprestimo) do |form| %>
  <% if emprestimo.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(emprestimo.errors.count, "error") %> prohibited this emprestimo from being saved:</h2>

      <ul>
        <% emprestimo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :data_emprestimo, style: "display: block" %>
    <%= form.date_field :data_emprestimo %>
  </div>

  <div>
    <%= form.label :data_devolucao, style: "display: block" %>
    <%= form.date_field :data_devolucao %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.check_box :status %>
  </div>

  <div>
    <%= form.label :observacacao, style: "display: block" %>
    <%= form.text_field :observacacao %>
  </div>

  <div>
    <%= form.label :locador_id, style: "display: block" %>

    <%= form.select :locador_id, Locador.all.map { |t| [t.nome, t.id]}, {}, class: "form-control" %>
  </div>

  <div>
    <%= form.label :objeto_id, style: "display: block" %>

    <%= form.select :objeto_id, Objeto.all.map { |t| [t.codigo + " " + t.tipo, t.id]}, {}, class: "form-control" %>
  </div>


    <%= form.submit %>
  </div>
<% end %>
